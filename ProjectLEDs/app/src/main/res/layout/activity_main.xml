<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projects.jeriko.projectleds.MainActivity">

    <Button
        android:text="BLINK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="blinkLed"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="resetData"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/text01"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <TextView
        android:text="xDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text02"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/red01"
        android:layout_alignEnd="@+id/red01" />

    <TextView
        android:text="zDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text04"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/text01"
        android:layout_alignStart="@+id/text01" />

    <TextView
        android:text="yDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text03"
        android:layout_alignBaseline="@+id/text04"
        android:layout_alignBottom="@+id/text04"
        android:layout_toLeftOf="@+id/text04"
        android:layout_toStartOf="@+id/text04"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <Button
        android:text=""
        android:layout_height="50dp"
        android:id="@+id/red01"
        android:background="@drawable/circle_button"
        android:layout_width="50dp"
        android:onClick="setColor"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/text02"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#ff0000" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/red02"
        android:background="@drawable/circle_button"
        android:backgroundTint="#fd2a00"
        android:onClick="setColor"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/red01"
        android:layout_alignStart="@+id/red01"
        android:layout_alignRight="@+id/red01"
        android:layout_alignEnd="@+id/red01" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@drawable/circle_button"
        android:backgroundTint="#fd2a00"
        android:onClick="setColor"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/red01"
        android:layout_alignStart="@+id/red01"
        android:layout_alignRight="@+id/red01"
        android:layout_alignEnd="@+id/red01" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/circle_button"
        android:backgroundTint="#fd2a00"
        android:onClick="setColor"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/red01"
        android:layout_alignStart="@+id/red01"
        android:layout_alignRight="@+id/red01"
        android:layout_alignEnd="@+id/red01" />

    <Button
        android:text=""
        android:layout_height="50dp"
        android:id="@+id/red05"
        android:background="@drawable/circle_button"
        android:layout_width="50dp"
        android:backgroundTint="#fbff00"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/red04"
        android:layout_alignLeft="@+id/red04"
        android:layout_alignStart="@+id/red04"
        android:onClick="setColor" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/green01"
        android:background="@drawable/circle_button"
        android:backgroundTint="#009400"
        android:layout_below="@+id/text03"
        android:layout_alignLeft="@+id/text03"
        android:layout_alignStart="@+id/text03"
        android:onClick="setColor" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/green02"
        android:background="@drawable/circle_button"
        android:backgroundTint="#0cc80c"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/green01"
        android:layout_alignStart="@+id/green01"
        android:onClick="setColor" />

    <Button
        android:text=""
        android:layout_height="50dp"
        android:id="@+id/red03"
        android:background="@drawable/circle_button"
        android:layout_width="50dp"
        android:onClick="setColor"
        android:backgroundTint="#ff4400"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/red02"
        android:layout_alignLeft="@+id/red02"
        android:layout_alignStart="@+id/red02" />

    <Button
        android:text=""
        android:layout_height="50dp"
        android:id="@+id/red04"
        android:background="@drawable/circle_button"
        android:layout_width="50dp"
        android:backgroundTint="#ff9d00"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/red03"
        android:layout_alignLeft="@+id/red03"
        android:layout_alignStart="@+id/red03"
        android:onClick="setColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:background="@drawable/circle_button"
        android:backgroundTint="#fd2a00"
        android:onClick="setColor"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/red01"
        android:layout_alignStart="@+id/red01"
        android:layout_alignRight="@+id/red01"
        android:layout_alignEnd="@+id/red01" />

</RelativeLayout>
